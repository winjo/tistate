{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": ["dom", "ES2015"]
  },
  "include": ["src"],
  "exclude": [
    "example",
    "dist",
    "lib",
    "esm"
  ]
}
